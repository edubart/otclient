HealthBar < ProgressBar
  id: healthBar
  height: 15
  background-color: #ff4444
  anchors.top: parent.top
  anchors.left: parent.left
  anchors.right: parent.right

ManaBar < ProgressBar
  id: manaBar
  height: 15
  background-color: #4444ff
  anchors.bottom: parent.bottom
  anchors.left: parent.left
  anchors.right: parent.right

HealthLabel < GameLabel
  id: healthLabel
  color: white
  text-align: center
  font: verdana-11px-rounded
  anchors.fill: healthBar
  margin-top: 2
  text: 0 / 0

ManaLabel < GameLabel
  id: manaLabel
  color: white
  text-align: center
  font: verdana-11px-rounded
  anchors.fill: manaBar
  margin-top: 2
  text: 0 / 0

BorderlessGameWindow
  id: healthManaPanel
  width: 192
  height: 34
  margin-top: 10
  margin-left: 6
  margin-right: 6
  move-policy: free updated

  HealthBar
  HealthLabel
  ManaBar
  ManaLabel
